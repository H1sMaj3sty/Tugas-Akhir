<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aboutPage">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_about" />

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/placeholder"
        android:drawableRight="@drawable/icon_arrow_back"
        android:padding="6dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="go to back home page"
        android:onClick="arrowBack"
        />

    <ImageView
        android:layout_width="148dp"
        android:layout_height="123dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/icon_with_bg" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:text="ABOUT US!"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome to our Tourism App! We are dedicated to providing travelers with an extraordinary journey and delivering valuable information to those who use this application."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="500dp"
        android:gravity="center">

        <Button
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_acebook"
            android:contentDescription="go to Facebook"
            android:layout_marginRight="16dp"
            android:onClick="faceBook"/>


        <Button
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_instagram"
            android:contentDescription="go to Instagram"
            android:layout_marginRight="16dp"
            android:onClick="instaGram"/>

        <Button
            android:id="@+id/youtube"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_youtube"
            android:contentDescription="go to YouTube"
            android:onClick="youTube"/>
    </LinearLayout>



</RelativeLayout>